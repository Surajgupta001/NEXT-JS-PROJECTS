# GoCart â€“ Example Environment Variables (dummy values)
# Copy to .env and replace with your own secrets
###########################################################

# Display currency symbol in the UI
NEXT_PUBLIC_CURRENCY_SYMBOL="$"

# Admin users (comma-separated emails). Example: "owner@example.com,admin@example.com"
ADMIN_EMAIL="owner@example.com,admin@example.com"

# Clerk Authentication (https://clerk.com)
# Publishable key is exposed on the client; secret stays server-side
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_1234567890abcdef"
CLERK_SECRET_KEY="sk_test_1234567890abcdef"

# Database (Postgres). Example shown for Neon with SSL
# DIRECT_URL is optional (prisma direct connection), leave empty if unused
DATABASE_URL="postgresql://user:password@ep-fancy-123456.neon.tech/neondb?sslmode=require"
DIRECT_URL=""

# Inngest (optional; only if you use a hosted Inngest account)
# Safe to leave empty for local development using the Next.js serve adapter
INNGEST_EVENT_KEY=""
INNGEST_SIGNING_KEY=""

# ImageKit (https://imagekit.io)
IMAGEKIT_PUBLIC_KEY="public_abc123"
IMAGEKIT_PRIVATE_KEY="private_abc123"
IMAGEKIT_URL_ENDPOINT="https://ik.imagekit.io/your_id"

# Stripe (https://stripe.com)
# STRIPE_SECRET_KEY starts with sk_test_... for test mode
# STRIPE_WEBHOOK_SECRET is provided by `stripe listen`
STRIPE_SECRET_KEY="sk_test_51NXXXXYYYYZZZZ"
STRIPE_WEBHOOK_SECRET="whsec_XXXXXXXXXXXXXXXXXXXXXXXXXXXX"

# AI Listing Assistant (OpenAI-compatible)
# Use OpenAI or a compatible provider. Model must support image input.
# Examples:
#   OPENAI_BASE_URL="https://api.openai.com/v1"
#   OPEN_AI_MODEL="gpt-4o-mini"
OPENAI_API_KEY="sk-abc123"
OPENAI_BASE_URL="https://api.openai.com/v1"
OPEN_AI_MODEL="gpt-4o-mini"